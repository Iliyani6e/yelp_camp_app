<% include ../partials/header %>


  
  
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to my First YelpCamp APP!!!:)</h1>
      <p>View all my hand-picked campgrounds from all over the world.</p>
      <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new"
          >Add new campground</a
        >
      </p>
    </div>
  </header>
</div>

<div class="row">
  <% campgrounds.forEach((campground) => { %>
  <div class="col-md-3 col-sm-6">
    <div class="thumbnail">
      <img src="<%= campground.image %>" alt="" />
      <div class="caption"><h4><%= campground.name %></h4></div>
      <p>
        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
          >More info</a
        >
      </p>
    </div>
  </div>
  <% }); %>

<% include ../partials/footer %>
